package repeticao;

import java.util.Scanner;

public class Exercicio2For {
	/* ENUNCIADO
	 * 2. Ler 10 números e imprimir quantos são pares e quantos são ímpares. (FOR)
	 */
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int num;
		Scanner leia = new Scanner(System.in);
		
		System.out.println("\nEscreva o primeiro número: ");
		num = leia.nextInt();
		System.out.println("\nEscreva o segundo número: ");
		num = leia.nextInt();
		System.out.println("\nEscreva o terceiro número: ");
		num = leia.nextInt();
		System.out.println("\nEscreva o quarto número: ");
		num = leia.nextInt();
		System.out.println("\nEscreva o quinto número: ");
		num = leia.nextInt();
		System.out.println("\nEscreva o sexto número: ");
		num = leia.nextInt();
		System.out.println("\nEscreva o sétimo número: ");
		num = leia.nextInt();
		
	}

}
