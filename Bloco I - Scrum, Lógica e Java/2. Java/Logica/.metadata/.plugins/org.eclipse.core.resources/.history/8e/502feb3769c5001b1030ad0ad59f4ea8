package repeticao;

import java.util.Scanner;

public class Exercicio2DoWhile {

	/* ENUNCIADO
	 * Escrever um programa que receba vários números inteiros no teclado. 
	 * E no final imprimir a média dos números múltiplos de 3. Para sair digitar 0(zero).(DO...WHILE)
	 */
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner leia = new Scanner(System.in);
		int num, somaMult3=0, contMult3=0;
		float mediaMult3;
		
		System.out.println("\nEntre com um número: \nPara sair digite ZERO (0): ");
		num = leia.nextInt();
		
		do
		{
			if(num!=0)
			{
				if(num%3==0)
				{
					somaMult3 = somaMult3 + num;
					contMult3++;
				}
			}
			System.out.println("\nEntre com um número: \nPara sair digite ZERO (0): ");
			num = leia.nextInt();
		}
		while(num!=0);
		
		mediaMult3 = somaMult3 / contMult3;
		
		System.out.println("\nMédia dos números múltiplos de 3: "+mediaMult3);
		
	}

}
